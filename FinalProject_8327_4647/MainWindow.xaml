    <!--<Window.Resources>
        <viewModel:ViewModel x:Key="StarViewModel" />
    </Window.Resources>-->
    
    <Grid x:Name="myGrid" FlowDirection="RightToLeft">
        <Grid.ColumnDefinitions>
