<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--image day text style-->
    <Style x:Key="AnnotationStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="10,10,10,0"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!--near earth objects style-->
    <Style x:Key="neoTextBlock" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="20,10,5,10" />
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="neoTextbox" TargetType="TextBox">
        <Setter Property="Margin" Value="5,10,20,10" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="18"/>
    </Style>
</ResourceDictionary>